pipeline {
    agent { label 'agent-ssh' }
    environment {
      MY_KUBECONFIG = credentials('ocp46')
      IMAGE_NAME    = "rockylinux"
      IMAGE_TAG     = "aws"
      
    }
    stages {
        stage('Build') {
            steps {
              script {
                sh "id"
                sh """
                podman build -t $IMAGE_NAME:$IMAGE_TAG rockylinux/
                """
              }
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}
